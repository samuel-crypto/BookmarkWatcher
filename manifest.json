{
  "name": "Bookmark Watcher",
  "version": "1.0.0",
  "description": "Lists all bookmarks for the domain of the current page as hyperlinks.",
  "permissions": ["storage", "tabs", "bookmarks"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "manifest_version": 2
}
